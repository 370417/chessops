{
  "compilerOptions": {
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "target": "ES6",
    "lib": ["ES6"],
    "module": "commonjs",
    "outDir": "dist/lib",
    "declarationDir": "dist/types",
    "declaration": true
  },
  "include": ["src"]
}
